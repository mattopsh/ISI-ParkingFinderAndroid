<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    tools:layout_gravity="center">

    <TextView
        android:id="@+id/filtersTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Filters"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bg1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#292929"
        app:layout_constraintBottom_toBottomOf="@+id/endView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/minFreeSpacesTV" />

    <TextView
        android:id="@+id/minFreeSpacesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Min free spaces"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/bg1"
        app:layout_constraintTop_toBottomOf="@id/filtersTV" />

    <ToggleButton
        android:id="@+id/freeSpaces5TBt"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/toggle_button_orange"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="#ffffff"
        android:textOff="5"
        android:textOn="5"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minFreeSpacesTV" />

    <ToggleButton
        android:id="@+id/freeSpaces15TBt"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_button_yellow"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="#ffffff"
        android:textOff="15"
        android:textOn="15"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/freeSpaces5TBt" />

    <ToggleButton
        android:id="@+id/freeSpaces30TBt"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/toggle_button_green"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="#ffffff"
        android:textOff="30"
        android:textOn="30"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/freeSpaces15TBt" />

    <View
        android:id="@+id/endView1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:layout_constraintStart_toEndOf="@id/freeSpaces30TBt"
        app:layout_constraintTop_toBottomOf="@id/freeSpaces30TBt" />

    <View
        android:id="@+id/bg2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#292929"
        app:layout_constraintBottom_toBottomOf="@+id/endView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/minVeracityTV" />

    <TextView
        android:id="@+id/minVeracityTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Min data veracity"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/bg2"
        app:layout_constraintTop_toBottomOf="@id/freeSpaces5TBt" />

    <ToggleButton
        android:id="@+id/veracity30Bt"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/toggle_button_orange"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="#ffffff"
        android:textOff="30%"
        android:textOn="30%"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minVeracityTV" />

    <ToggleButton
        android:id="@+id/veracity60Bt"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_button_yellow"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="#ffffff"
        android:textOff="60%"
        android:textOn="60%"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/veracity30Bt" />

    <ToggleButton
        android:id="@+id/veracity90Bt"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/toggle_button_green"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="#ffffff"
        android:textOff="90%"
        android:textOn="90%"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/veracity30Bt" />

    <View
        android:id="@+id/endView2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:layout_constraintStart_toEndOf="@id/veracity90Bt"
        app:layout_constraintTop_toBottomOf="@id/veracity90Bt" />

    <View
        android:id="@+id/bg3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#292929"
        app:layout_constraintBottom_toBottomOf="@+id/endView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/costTV" />

    <TextView
        android:id="@+id/costTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Cost"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/bg3"
        app:layout_constraintTop_toBottomOf="@id/veracity30Bt" />

    <ToggleButton
        android:id="@+id/paidParkingTBt"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/toggle_button_orange"
        android:fontFamily="@font/montserrat_medium"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textOff="Paid"
        android:textOn="Paid"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/costTV" />

    <ToggleButton
        android:id="@+id/limitedParkingTBt"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_button_yellow"
        android:fontFamily="@font/montserrat_medium"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textOff="Limited"
        android:textOn="Limited"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/paidParkingTBt" />

    <ToggleButton
        android:id="@+id/freeParkingTBt"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/toggle_button_green"
        android:fontFamily="@font/montserrat_medium"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textOff="Free"
        android:textOn="Free"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/paidParkingTBt" />

    <View
        android:id="@+id/endView3"
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:layout_constraintStart_toEndOf="@id/freeParkingTBt"
        app:layout_constraintTop_toBottomOf="@id/freeParkingTBt" />

    <View
        android:id="@+id/bg4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#292929"
        app:layout_constraintBottom_toBottomOf="@+id/distanceSB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/maxDistanceTV" />

    <TextView
        android:id="@+id/maxDistanceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Max distance"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/bg4"
        app:layout_constraintTop_toBottomOf="@id/paidParkingTBt" />

    <TextView
        android:id="@+id/distanceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="1 km"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/maxDistanceTV" />

    <SeekBar
        android:id="@+id/distanceSB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="4900"
        android:paddingBottom="4dp"
        android:progress="2100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/distanceTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="100m"
        android:textColor="@color/gray"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/distanceSB"
        app:layout_constraintStart_toStartOf="@id/distanceSB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="5 km"
        android:textColor="@color/gray"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/distanceSB"
        app:layout_constraintEnd_toEndOf="@id/distanceSB" />

    <TextView
        android:id="@+id/cancelTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat_medium"
        android:paddingBottom="4dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        android:text="@string/cancel"
        android:textColor="@drawable/tv_white_selector"
        app:layout_constraintBottom_toBottomOf="@+id/applyTV"
        app:layout_constraintEnd_toStartOf="@+id/applyTV"
        app:layout_constraintTop_toBottomOf="@id/distanceSB" />

    <TextView
        android:id="@+id/applyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:paddingBottom="4dp"
        android:paddingEnd="6dp"
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        android:text="Apply"
        android:textColor="@drawable/tv_white_selector"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/clearTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:paddingBottom="4dp"
        android:paddingStart="6dp"
        android:text="Clear"
        android:textColor="@drawable/tv_white_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>